{
  "scripts": {
    "build": "run-s build:*",
    "build:mkdir": "mkdir -p distribution",
    "build:manifest": "node scripts/generate-manifest",
    "build:icon": "cp source/icon.png distribution/icon.png",
    "build:css": "node-sass source/content.scss distribution/content.css",
    "build:js": "webpack --mode production",
    "watch": "run-p watch:*",
    "watch:css": "node-sass source/content.scss distribution/content.css -w",
    "watch:js": "webpack --mode development -w",
    "release": "run-s release:*",
    "release:chrome": "cd distribution && webstore upload --auto-publish",
    "lint": "sass-lint -v --max-warnings 0",
    "zip": "cd distribution && zip -r ../extension.zip *"
  },
  "devDependencies": {
    "@types/element-ready": "^2.1.0",
    "awesome-typescript-loader": "^5.2.0",
    "chrome-webstore-upload-cli": "^1.2.0",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "sass-lint": "^1.12.1",
    "typescript": "^3.0.1",
    "utc-version": "^1.1.0",
    "webpack": "^4.16.5",
    "webpack-command": "^0.4.1"
  },
  "dependencies": {
    "element-ready": "^3.0.0"
  },
  "private": true
}
