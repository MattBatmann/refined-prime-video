{
  "scripts": {
    "lint": "run-s lint:*",
    "lint:sass": "sass-lint -v --max-warnings 0",
    "lint:js": "eslint --ext .ts,.js,.vue source --ignore-path .gitignore",
    "build": "NODE_ENV=production run-s build:*",
    "build:clean": "rm -rf extensions/*",
    "build:mkdir": "mkdir -p extensions/common extensions/chrome extensions/firefox",
    "build:common": "run-p build:common:*",
    "build:common:icon": "cp source/icon.png extensions/common/icon.png",
    "build:common:sass": "node-sass source/content.scss extensions/common/content.css",
    "build:common:tailwind": "tailwind build source/popup/popup.css -o extensions/common/popup.css",
    "build:common:webpack": "webpack --mode production",
    "build:common:manifest": "node scripts/generate-manifest",
    "build:firefox": "run-p build:firefox:*",
    "build:firefox:common": "cp -r extensions/common/* extensions/firefox",
    "build:firefox:html": "cp source/popup/popup.firefox.html extensions/firefox/popup.html",
    "build:chrome": "run-p build:chrome:*",
    "build:chrome:common": "cp -r extensions/common/* extensions/chrome",
    "build:chrome:html": "cp source/popup/popup.chrome.html extensions/chrome/popup.html",
    "build:chrome:polyfill": "cp node_modules/webextension-polyfill/dist/browser-polyfill.min.js extensions/chrome",
    "watch": "NODE_ENV=development run-p watch:*",
    "watch:sass": "node-sass source/content.scss extensions/chrome/content.css -w",
    "watch:webpack": "webpack --mode development -w",
    "dev": "run-s build watch",
    "release": ". ./.env && run-s build release:*",
    "release:chrome": "shipit chrome extensions/chrome",
    "release:firefox": "shipit firefox extensions/firefox"
  },
  "dependencies": {
    "element-ready": "^4.1.1",
    "feather-icons": "^4.28.0",
    "vue": "^2.6.11",
    "vue-svg-loader": "^0.16.0",
    "webextension-polyfill": "^0.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "@wext/shipit": "^0.2.1",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^6.2.2",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.3",
    "sass-lint": "^1.12.1",
    "tailwindcss": "^1.4.1",
    "terser-webpack-plugin": "^2.3.5",
    "ts-loader": "^7.0.0",
    "typescript": "^3.8.3",
    "utc-version": "^2.0.1",
    "vue-loader": "^15.9.1",
    "vue-template-compiler": "^2.6.11",
    "web-ext-types": "^3.2.1",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "private": true
}
