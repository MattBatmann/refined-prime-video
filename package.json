{
  "scripts": {
    "build": "run-s build:*",
    "build:mkdir": "mkdir -p distribution",
    "build:manifest": "node scripts/generate-manifest",
    "build:icon": "cp source/icon.png distribution/icon.png",
    "build:css": "node-sass source/content.scss distribution/content.css",
    "build:js": "cp source/content.js distribution/content.js",
    "release": "run-s release:*",
    "release:chrome": "cd distribution && webstore upload",
    "lint": "sass-lint -v --max-warnings 0",
    "zip": "cd distribution && zip -r ../extension.zip *"
  },
  "devDependencies": {
    "chrome-webstore-upload-cli": "^1.2.0",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "sass-lint": "^1.12.1",
    "utc-version": "^1.1.0"
  },
  "private": true
}
